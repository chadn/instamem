{
    "name": "instamem",
    "version": "0.1.16",
    "private": true,
    "scripts": {
        "predev": "node scripts/inject-sw-version.js",
        "prebuild": "node scripts/inject-sw-version.js",
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "db": "scripts/db-setup.sh",
        "memories": "tsx scripts/memories.ts",
        "test": "npm run test:unit && npm run test:e2e",
        "test:unit": "vitest run # Fast unit tests (~1s) for business logic",
        "test:unit:watch": "vitest --watch # Unit tests in watch mode for development",
        "test:e2e": "bash tests/scripts/test-with-organization.sh # Full E2E tests (~90s) with Playwright",
        "test:e2e:all-browsers": "PLAYWRIGHT_BROWSERS=firefox,webkit,mobile playwright test --config=tests/config/playwright.config.ts # Cross-browser E2E testing",
        "test:e2e:ui": "playwright test --config=tests/config/playwright.config.ts --ui # Interactive E2E test runner"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.1.1",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-slot": "^1.2.3",
